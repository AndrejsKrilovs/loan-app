root = true

# Общие настройки для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Настройки для Java
[*.java]
indent_size = 2
max_line_length = 100

# Настройки для YAML
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# Настройки для SQL
[*.sql]
indent_size = 2